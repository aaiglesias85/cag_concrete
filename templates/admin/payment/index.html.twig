                                                <th>File</th>
                                                <th>Actions</th>
                                            </tr>
                                            </thead>
                                            <tbody class="text-gray-600 fw-semibold">

                                            </tbody>
                                        </table>
                                        <!--end::Datatable-->
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane fade" id="tab-content-notes" role="tabpanel">
                                <div class="row" id="lista-notes">
                                    <div class="col-md-12">
                                        <!--begin::Wrapper-->
                                        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-4 mb-5">

                                            <!-- Acciones -->
                                            <div class="d-flex flex-wrap gap-3">
                                                {% if permiso.agregar or permiso.editar %}
                                                    <button id="btn-agregar-note" class="btn btn-success w-125px">
                                                        <i class="ki-duotone ki-plus-circle fs-1 me-2"><span
                                                                    class="path1"></span><span
                                                                    class="path2"></span><span
                                                                    class="path3"></span><span class="path4"></span></i>
                                                        New
                                                    </button>
                                                {% endif %}

                                                {% if permiso.eliminar %}
                                                    <button id="btn-eliminar-notes" class="btn btn-danger w-125px">

<style>
   .dtfc-fixed-start {
      background: #fff !important;
   }

   .dtfc-fixed-end {
      background: #fff !important;
   }  
   /* =========================================
      1.Botones Globales-afuera
      ========================================= */
   .form-check-input.status-toggle {
      width: 60px !important;   /* Ancho Grande */
      height: 30px !important;  /* Alto Grande */
      position: relative;
   }

   /* Rojo / Open (Global) */
   .form-check-input.status-toggle:not(:checked) {
      background-color: #f1416c !important; 
      border-color: #f1416c !important;
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-4 -4 8 8'%3e%3ccircle r='3' fill='%23ffffff'/%3e%3c/svg%3e") !important;
   }
   .form-check-input.status-toggle:not(:checked)::after {
      content: "O";
      position: absolute;
      right: 12px;
      top: 50%;
      transform: translateY(-50%);
      color: white;
      font-weight: 900; 
      font-size: 14px; /* Letra Grande */
   }

   /* Verde / Closed (Global) */
   .form-check-input.status-toggle:checked {
      background-color: #50cd89 !important; 
      border-color: #50cd89 !important;
   }
   .form-check-input.status-toggle:checked::after {
      content: "C";
      position: absolute;
      left: 12px;
      top: 50%;
      transform: translateY(-50%);
      color: white;
      font-weight: 900; 
      font-size: 14px; /* Letra Grande */
   }

   /* =========================================
      2. Botones Item -dentro Individual 
      ========================================= */
   .form-check-input.item-status-toggle {
      width: 40px !important;   /* <--- pequeño */
      height: 20px !important;  /* <--- pequeño */
      position: relative;
      margin-top: 0;
   }

   /* Rojo / Open (Item Pequeño) */
   .form-check-input.item-status-toggle:not(:checked) {
      background-color: #f1416c !important; 
      border-color: #f1416c !important;
      background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' viewBox='-4 -4 8 8'%3e%3ccircle r='3' fill='%23ffffff'/%3e%3c/svg%3e") !important;
   }
   .form-check-input.item-status-toggle:not(:checked)::after {
      content: "O";
      position: absolute;
      right: 8px;     /* Ajustado para tamaño pequeño */
      top: 55%;
      transform: translateY(-50%);
      color: white;
      font-weight: bold; 
      font-size: 10px; /* Letra Pequeña */
   }

   /* Verde / Closed (Item Pequeño) */
   .form-check-input.item-status-toggle:checked {
      background-color: #50cd89 !important; 
      border-color: #50cd89 !important;
   }
   .form-check-input.item-status-toggle:checked::after {
      content: "C";
      position: absolute;
      left: 8px;      /* Ajustado para tamaño pequeño */
      top: 55%;
      transform: translateY(-50%);
      color: white;
      font-weight: bold; 
      font-size: 10px; /* Letra Pequeña */
   }   
</style>


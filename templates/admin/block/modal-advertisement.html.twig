
<!-- Modal advertisement-->
{% if advertisement %}
<div class="modal fade" id="modal-advertisement" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-id="{{ advertisement.advertisement_id }}">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fa fa-bullhorn"></i> {{ advertisement.title }}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                {{ advertisement.description_html | raw }}
            </div>
        </div>
    </div>
</div>
{% endif %}
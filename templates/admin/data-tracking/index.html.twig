                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>
                                                <span class="ic-step-number">3</span>
                                                Total People
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <input type="text" class="form-control form-control-number" id="total_people"
                                                   name="total_people">
                                        </div>
                                        <div class="col-md-4">
                                            <label>
                                                Overhead Price
                                            </label>
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" class="form-control form-control-number"
                                                       id="overhead_price" name="overhead_price">
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <label>
                                                Total Overhead
                                            </label>
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" class="form-control form-control-number"
                                                       id="total_overhead_price" name="total_overhead_price" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-4">
                                            <label>
                                                <span class="ic-step-number">4</span>
                                                Crew Lead
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <input type="text" class="form-control" id="crew_lead" name="crew_lead">
                                        </div>
                                        <div class="col-md-4">
                                            <label>
                                                Total Stamps
                                            </label>
                                            <input type="text" class="form-control form-control-number"
                                                   id="total_stamps" name="total_stamps">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <label>
                                                <span class="ic-step-number">5</span>
                                                Notes
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
                                        </div>
                                        <div class="col-md-6">
                                            <label>
                                                Other Materials
                                            </label>
                                            <textarea class="form-control" id="other_materials" name="other_materials"
                                                      rows="3"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div id="form-group-totals" class="form-group m-form__group ic-form-group m--hide">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <label>
                                                <span class="ic-step-number">6</span>
                                                Total Concrete Yield
                                            </label>
                                            <input type="text" class="form-control form-control-number"
                                                   id="total_concrete_yiel" name="total_concrete_yiel" disabled>
                                        </div>
                                        <div class="col-md-3">
                                            <label>
                                                Quantity today
                                            </label>
                                            <input type="text" class="form-control" id="total_quantity_today"
                                                   name="total_quantity_today" disabled>
                                        </div>
                                        <div class="col-md-3">
                                            <label>
                                                Daily total
                                            </label>
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" class="form-control form-control-number"
                                                       id="total_daily_today" name="total_daily_today" disabled>
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <label>
                                                Profit
                                            </label>
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend">
                                                    <span class="input-group-text">$</span>
                                                </div>
                                                <input type="text" class="form-control form-control-number" id="profit"
                                                       name="profit" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </form>
                        </div>
                        <div class="tab-pane" id="tab-content-items" role="tabpanel">
                            <div class="row" id="lista-items">
                                <div class="col-lg-12">
                                    <!--begin: Search Form -->
                                    <div class="m-form m-form--label-align-right">
                                        <div class="row align-items-center">
                                            <div class="col-xl-12 order-1">
                                                <div class="form-group m-form__group row align-items-center">
                                                    {% if permiso.agregar or permiso.editar %}
                                                        <div class="col-md-2">
                                                            <div class="btn-group">
                                                                <button id="btn-agregar-item" class="btn btn-success"
                                                                        style="margin-bottom: 20px; margin-top: 10px;">
                                                                    New <i class="la la-plus"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                    <div class="col-lg-7"></div>

                                                    <div class="col-md-3">
                                                        <div class="m-input-icon m-input-icon--left">
                                                            <input type="text"
                                                                   class="form-control m-input m_form_search"
                                                                   placeholder="Search...">
                                                            <span class="m-input-icon__icon m-input-icon__icon--left">
                                                        <span><i class="la la-search"></i></span>
                                                    </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <!--end: Search Form -->
                                    <!--begin: Datatable -->
                                    <div class="m_datatable" id="items-table-editable"></div>
                                    <!--end: Datatable -->
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-content-labor" role="tabpanel">
                            <div class="row" id="lista-labor">
                                <div class="col-lg-12">
                                    <!--begin: Search Form -->
                                    <div class="m-form m-form--label-align-right">
                                        <div class="row align-items-center">
                                            <div class="col-xl-12 order-1">
                                                <div class="form-group m-form__group row align-items-center">
                                                    {% if permiso.agregar or permiso.editar %}
                                                        <div class="col-md-2">
                                                            <div class="btn-group">
                                                                <button id="btn-agregar-labor" class="btn btn-success"
                                                                        style="margin-bottom: 20px; margin-top: 10px;">
                                                                    New <i class="la la-plus"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                    <div class="col-lg-7"></div>

                                                    <div class="col-md-3">
                                                        <div class="m-input-icon m-input-icon--left">
                                                            <input type="text"
                                                                   class="form-control m-input m_form_search"
                                                                   placeholder="Search...">
                                                            <span class="m-input-icon__icon m-input-icon__icon--left">
                                                        <span><i class="la la-search"></i></span>
                                                    </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <!--end: Search Form -->
                                    <!--begin: Datatable -->
                                    <div class="m_datatable" id="labor-table-editable"></div>
                                    <!--end: Datatable -->
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-content-material" role="tabpanel">
                            <div class="row" id="lista-material">
                                <div class="col-lg-12">
                                    <!--begin: Search Form -->
                                    <div class="m-form m-form--label-align-right">
                                        <div class="row align-items-center">
                                            <div class="col-xl-12 order-1">
                                                <div class="form-group m-form__group row align-items-center">
                                                    {% if permiso.agregar or permiso.editar %}
                                                        <div class="col-md-2">
                                                            <div class="btn-group">
                                                                <button id="btn-agregar-material" class="btn btn-success"
                                                                        style="margin-bottom: 20px; margin-top: 10px;">
                                                                    New <i class="la la-plus"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    {% endif %}

                                                    <div class="col-lg-7"></div>

                                                    <div class="col-md-3">
                                                        <div class="m-input-icon m-input-icon--left">
                                                            <input type="text"
                                                                   class="form-control m-input m_form_search"
                                                                   placeholder="Search...">
                                                            <span class="m-input-icon__icon m-input-icon__icon--left">
                                                        <span><i class="la la-search"></i></span>
                                                    </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                    <!--end: Search Form -->
                                    <!--begin: Datatable -->
                                    <div class="m_datatable" id="material-table-editable"></div>
                                    <!--end: Datatable -->
                                </div>
                            </div>
                        </div>
                        <div class="tab-pane" id="tab-content-conc-vendor" role="tabpanel">
                            <div class="row" id="lista-conc-vendor">
                                <div class="col-lg-12">

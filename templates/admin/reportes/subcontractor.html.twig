{% extends 'admin/layout.html.twig' %}

{% block subtitle %} - Subcontractors Report{% endblock %}

{% block stylesheetspecific %}

{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Subcontractors Report</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Subcontractors Report</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Subcontractors report</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">

        <div id="lista-reporte-subcontractor" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Subcontractors Report
                        </h3>
                    </div>
                      <div class="col-md-1">

                        <a href="javascript:;" id="btn-reset-filters"
                           class="btn"
                           aria-label="Reset filters">
                            <span>
                                <i class="la la-refresh"></i>
                                <span>Reset filters</span>
                            </span>
                        </a>
                                    
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a id="btn-exportar"
                               class="btn btn-success btn-icon"
                               href="javascript:;">
                                    <span>
                                        <i class="la la-file-excel-o"></i>
                                        <span class="m--hidden-mobile">Export Excel</span>
                                    </span>
                            </a>
                        </li>

                        <li class="m-portlet__nav-item">
                            <a href="javascript:;" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="m-form m-form--label-align-right m--margin-bottom-15">
                    <div class="row align-items-center">
                        <div class="col-xl-12 order-1">
                            <div class="row mb-2 align-items-center">
                                <div class="col-md-4 mb-2">
                                    <select class="form-control m-select2 event-change" id="filtro-subcontractor">
                                        <option value="">Subcontractor</option>
                                        {% for item in subcontractors %}
                                            <option value="{{ item.subcontractorId }}">{{ item.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-4 mb-2" >
                                    <select class="form-control m-select2 event-change" id="filtro-project">
                                        <option value="">Project</option>
                                        {% for item in projects %}
                                            <option value="{{ item.projectId }}">{{ item.projectNumber }} - {{ item.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-4 mb-2" id="select-project-item">
                                    <select class="form-control m-select2 event-change" id="filtro-project-item">
                                        <option value="">Item</option>

                                    </select>
                                </div>
                            </div>
                            <div class="row align-items-center">
                                <div class="col-md-2 mb-2">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="From" autocomplete="off" id="fechaInicial"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-2">
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker"
                                               placeholder="To" autocomplete="off" id="fechaFin"/>
                                        <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-2">
                                    <div class="m-input-icon m-input-icon--left">
                                        <input type="text" class="form-control m-input m_form_search"
                                               placeholder="Search..." id="btn-filtrar-search">
                                        <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								        </span>
                                    </div>
                                </div>
                                <div class="col-md-2 mb-2">
                                    <a href="javascript:;" id="btn-filtrar"
                                       class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air"
                                       style="margin-right: 10px;">
                                        <span>
                                            <i class="la la-search"></i>
                                            <span>Search</span>
                                        </span>
                                    </a>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <div class="m_datatable" id="reporte-subcontractor-table-editable"></div>
                <!--end: Datatable -->
            </div>
        </div>

    </div>


{% endblock %}

{% block javascriptsspecific %}


    <script src="{{ asset('bundles/ican/js/pages/reporte-subcontractor.js') }}?{{ 'now' | date('U') }}"></script>
    <script>

        var permiso = {
            agregar: {% if permiso.agregar %}{{ permiso.agregar }}{% else %}0{% endif %}, // 1 o 0
            editar: {% if permiso.editar %}{{ permiso.editar }}{% else %}0{% endif %},
            eliminar: {% if permiso.eliminar %}{{ permiso.eliminar }}{% else %}0{% endif %}
        };

        jQuery(document).ready(function () {
            ReporteSubcontractor.init();
        });
    </script>
{% endblock %}

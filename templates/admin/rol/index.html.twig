{% extends 'admin/layout.html.twig' %}

{% block subtitle %} - Rols{% endblock %}

{% block stylesheetspecific %}{% endblock %}

{% block content %}

    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <!--begin::Toolbar container-->
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
            <!--begin::Page title-->
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <!--begin::Title-->
                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Profiles</h1>
                <!--end::Title-->
                <!--begin::Breadcrumb-->
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">
                        <a href="{{ url('home') }}" class="text-muted text-hover-primary">Home</a>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <!--end::Item-->
                    <!--begin::Item-->
                    <li class="breadcrumb-item text-muted">Profiles</li>
                    <!--end::Item-->
                </ul>
                <!--end::Breadcrumb-->
            </div>
            <!--end::Page title-->
            <!--begin::Actions-->
            <div class="d-flex align-items-center gap-2 gap-lg-3">

            </div>
            <!--end::Actions-->
        </div>
        <!--end::Toolbar container-->
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <!--begin::Content container-->
        <div id="kt_app_content_container" class="app-container container-fluid">

            <div id="lista-perfil" class="card card-sticky">
                <div class="card-header border-0 pt-6"
                     data-kt-sticky="true"
                     data-kt-sticky-name="lista-perfil"
                     data-kt-sticky-offset="{default: '50px', xl: '80px'}"
                     data-kt-sticky-width="{default: '95%', sm: '100%', md: '100%', lg: '70%', xl: '80%'}"
                     data-kt-sticky-left="auto"
                     data-kt-sticky-top="{default: '0px', sm: '0px', md: '0px', lg: '70px', xl: '70px'}"
                     data-kt-sticky-animation="false"
                     data-kt-sticky-zindex="95">
                    <div class="card-title">
                        <div class="d-flex align-items-center position-relative my-1">
                            <i class="ki-duotone ki-magnifier text-primary fs-3 position-absolute ms-5">
                                <span class="path1"></span>
                                <span class="path2"></span>
                            </i>
                            <input type="text" data-table-filter="search"
                                   class="form-control form-control-solid w-300px ps-13"
                                   placeholder="Buscar..."/>
                        </div>
                    </div>
                    <div class="card-toolbar">
                        <div class="d-flex justify-content-end">
                            <!-- new -->
                            {% if permiso.agregar %}
                            <button
                                    type="button"
                                    id="btn-nuevo-perfil"
                                    class="btn btn-success me-2"
                            >
                                <i class="ki-duotone ki-plus-circle fs-1"><span class="path1"></span><span class="path2"></span><span
                                            class="path3"></span><span class="path4"></span></i>
                                <span class="kt-hidden-mobile font-weight-bold">Nuevo</span>
                            </button>
                            {% endif %}

                            <!-- delete -->
                            {% if permiso.eliminar %}
                            <button
                                    type="button"
                                    id="btn-eliminar-perfil"
                                    class="btn btn-danger me-2"
                            >
                                <i class="ki-duotone ki-trash fs-1"><span class="path1"></span><span class="path2"></span><span
                                            class="path3"></span><span class="path4"></span></i>
                                <span class="kt-hidden-mobile font-weight-bold">Eliminar</span>
                            </button>
                            {% endif %}

                            <!-- export -->
                            <div>
                                <!--begin::Export buttons-->
                                <div id="perfil-table-editable-export" class="d-none"></div>
                                <!--end::Export buttons-->

                                <!--begin::Export dropdown-->
                                <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click"
                                        data-kt-menu-placement="bottom-end">
                                    <i class="ki-duotone ki-exit-down fs-2"><span class="path1"></span><span class="path2"></span></i>
                                    <span class="kt-hidden-mobile font-weight-bold">Exportar</span>
                                </button>

                                <!--begin::Menu-->
                                <div id="perfil_export_menu"
                                     class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4"
                                     data-kt-menu="true">
                                    <!--begin::Menu item-->
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="copy">
                                            Copiar al portapapeles
                                        </a>
                                    </div>
                                    <!--end::Menu item-->
                                    <!--begin::Menu item-->
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="excel">
                                            Exportar a Excel
                                        </a>
                                    </div>
                                    <!--end::Menu item-->
                                    <!--begin::Menu item-->
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="csv">
                                            Exportar CSV
                                        </a>
                                    </div>
                                    <!--end::Menu item-->
                                    <!--begin::Menu item-->
                                    <div class="menu-item px-3">
                                        <a href="#" class="menu-link px-3" data-kt-export="pdf">
                                            Exportar a PDF
                                        </a>
                                    </div>
                                    <!--end::Menu item-->
                                </div>
                                <!--end::Menu-->
                                <!--end::Export dropdown-->

                                <!--begin::Hide default export buttons-->
                                <div id="perfil-table-editable-buttons" class="d-none"></div>
                                <!--end::Hide default export buttons-->
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!--begin::Datatable-->
                    <table id="perfil-table-editable" class="table table-striped align-middle table-row-dashed fs-6 gy-3 gs-5">
                        <thead>
                        <tr class="fw-bold fs-6 text-gray-800 px-7">
                            {% if permiso.eliminar %}
                            <th class="w-10px pe-2">
                                <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                    <input class="form-check-input check-select-all" type="checkbox" data-kt-check="true"
                                           data-kt-check-target="#perfil-table-editable .form-check-input" value="1"/>
                                </div>
                            </th>
                            {% endif %}
                            <th>Nombre</th>
                            <th>Descripci√≥n</th>
                            <th class="text-end min-w-100px">Acciones</th>
                        </tr>
                        </thead>
                        <tbody class="text-gray-600 fw-semibold">
                        </tbody>
                    </table>
                    <!--end::Datatable-->
                </div>
            </div>

        </div>
        <!--end::Content container-->
    </div>
    <!--end::Content-->

    {#
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Rols</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Rols</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Manage rols</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-perfil" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Rols
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        {% if permiso.agregar %}
                            <li class="m-portlet__nav-item">
                                <a id="btn-nuevo-perfil"
                                   class="btn btn-success btn-icon"
                                   href="javascript:;">
                                    <span>
                                        <i class="la la-plus"></i>
                                        <span class="m--hidden-mobile">New</span>
                                    </span>
                                </a>
                            </li>
                        {% endif %}
                        {% if permiso.eliminar %}
                            <li class="m-portlet__nav-item">
                                <a id="btn-eliminar-perfil"
                                   class="btn btn-danger btn-icon"
                                   href="javascript:;">
                                    <span>
                                        <i class="la la-trash-o"></i>
                                        <span class="m--hidden-mobile">Delete</span>
                                    </span>
                                </a>
                            </li>
                        {% endif %}
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="form-group m-form__group row align-items-center mb-2">
                    <div class="col-md-4">
                        <div class="m-input-icon m-input-icon--left">
                            <input type="text" class="form-control m-input m_form_search"
                                   placeholder="Search...">
                            <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                        </div>
                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <div class="m_datatable" id="perfil-table-editable"></div>
                <!--end: Datatable -->
            </div>
        </div>

        <div id="form-perfil" class="m-portlet m--hide">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text" id="form-perfil-title">
                            Do you want to create a new profile? Follow the next steps:
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;"
                               class="m-portlet__nav-link m-portlet__nav-link--icon cerrar-form-perfil"><i
                                        class="la la-close"></i></a>
                        </li>
                    </ul>
                </div>
            </div>
            <form class="m-form" id="perfil-form" action="#"
                  enctype="multipart/form-data" method="post">

                <input type="hidden" id="perfil_id" name="perfil_id"/>

                <div class="m-portlet__body">
                    <div class="m-form__section m-form__section--first">
                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">1</span>
                                Name
                                <span class="ic-small italic">(required)</span>
                            </label>

                            <input type="text" class="form-control form-control-text"
                                   id="descripcion" name="descripcion"/>
                        </div>
                        <div class="form-group m-form__group ic-form-group">
                            <label>
                                <span class="ic-step-number">2</span>
                                Profile permissions
                                <span class="ic-small italic">(required)</span>
                            </label>
                            <p class="m-form__help">Select the options to which the profile will have access</p>
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-sm table-striped m-table m-table--head-bg-brand"
                                           id="table-permisos">
                                        <thead>
                                        <tr>
                                            <th>Description</th>
                                            <th class="text-center" width="50">View</th>
                                            <th class="text-center" width="50">Add</th>
                                            <th class="text-center" width="50">Edit</th>
                                            <th class="text-center" width="50">Delete</th>
                                            <th class="text-center" width="50">All</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for item in funciones %}
                                            <tr class="tr-permiso" data-id="{{ item.funcionId }}">
                                                <td>{{ item.descripcion }}</td>
                                                <td class="text-center">
                                                    <label class="m-checkbox">
                                                        <input type="checkbox"
                                                               class="checkbox-permiso checkbox-permiso-ver"
                                                               data-id="{{ item.funcionId }}">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <label class="m-checkbox">
                                                        <input type="checkbox"
                                                               class="checkbox-permiso checkbox-permiso-agregar"
                                                               data-id="{{ item.funcionId }}">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <label class="m-checkbox">
                                                        <input type="checkbox"
                                                               class="checkbox-permiso checkbox-permiso-editar"
                                                               data-id="{{ item.funcionId }}">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <label class="m-checkbox">
                                                        <input type="checkbox"
                                                               class="checkbox-permiso checkbox-permiso-eliminar"
                                                               data-id="{{ item.funcionId }}">
                                                        <span></span>
                                                    </label>
                                                </td>
                                                <td class="text-center">
                                                    <label class="m-checkbox">
                                                        <input type="checkbox"
                                                               class="checkbox-permiso checkbox-permiso-todos"
                                                               data-id="{{ item.funcionId }}">
                                                        <span></span>
                                                    </label>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="m-form__actions">
                        {% if permiso.agregar or permiso.editar %}
                            <button id="btn-salvar-perfil" class="btn btn-success" type="button">
                                Save
                            </button>
                        {% endif %}
                        <button class="btn btn-danger cerrar-form-perfil" type="button">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>
        </div>

    </div>
    #}

{% endblock %}

{% block javascriptsspecific %}
    <script src="{{ asset('bundles/metronic8/js/pages/perfiles.js') }}?{{ 'now' | date('U') }}"></script>
    <script>

        var permiso = {
            agregar: {% if permiso.agregar %}{{ permiso.agregar }}{% else %}0{% endif %}, // 1 o 0
            editar: {% if permiso.editar %}{{ permiso.editar }}{% else %}0{% endif %},
            eliminar: {% if permiso.eliminar %}{{ permiso.eliminar }}{% else %}0{% endif %}
        };

        jQuery(document).ready(function () {
            Perfiles.init();
        });
    </script>
{% endblock %}

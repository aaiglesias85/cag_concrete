{% extends 'admin/layout.html.twig' %}

{% block subtitle %} - Estimates{% endblock %}

{% block stylesheetspecific %}
    <link href="{{ asset('bundles/ican/plugins/jquery-tags-input/jquery.tagsinput.css') }}" rel="stylesheet">
    <style>
        .m-widget4 .m-widget4__item {
            padding-top: 5px;
            padding-bottom: 5px;
        }

        .m-widget4 .m-widget4__item .m-widget4__info {
            padding-left: 0;
        }

        .popover-company {
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Estimates</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Estimates</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Manage estimates</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-estimate" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Estimates
                        </h3>
                    </div>

                    <a href="javascript:;" id="btn-filter" class="btn mr-1">
                        <span><i class="la la-filter mr-1"></i><span>Show Filters</span></span>
                    </a>

                    <a href="javascript:;" id="btn-reset-filtrar" class="btn mr-1">
                            <span>
                                <i class="la la-refresh"></i>
                                <span>Reset filters</span>
                            </span>
                    </a>

                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        {% if permiso.agregar %}
                            <li class="m-portlet__nav-item">
                                <a id="btn-nuevo-estimate"
                                   class="btn btn-success btn-icon"
                                   href="javascript:;">
                                    <span>
                                        <i class="la la-plus"></i>
                                        <span class="m--hidden-mobile">New</span>
                                    </span>
                                </a>
                            </li>
                        {% endif %}
                        {% if permiso.eliminar %}
                            <li class="m-portlet__nav-item">
                                <a id="btn-eliminar-estimate"
                                   class="btn btn-danger btn-icon"
                                   href="javascript:;">
                                    <span>
                                        <i class="la la-trash-o"></i>
                                        <span class="m--hidden-mobile">Delete</span>
                                    </span>
                                </a>
                            </li>
                        {% endif %}
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="box-filters m--hide mb-4" id="div-filters">
                    <label>Filters</label>
                    <div class="form-group m-form__group row align-items-center mb-2">
                        <div class="col-md-3">
                            <select class="form-control m-select2 select-stage" id="filtro-stage">
                                <option value="">Stage</option>
                                {% for item in stages %}
                                    <option value="{{ item.stageId }}"
                                            data-color="{{ item.color }}">{{ item.description }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-control m-select2" id="filtro-project-type">
                                <option value="">Project Type</option>
                                {% for item in project_types %}
                                    <option value="{{ item.typeId }}">{{ item.description }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-control m-select2" id="filtro-proposal-type">
                                <option value="">Proposal Type</option>
                                {% for item in proposal_types %}
                                    <option value="{{ item.typeId }}">{{ item.description }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-3">
                            <select class="form-control m-select2" id="filtro-plan-status">
                                <option value="">Plan Status</option>
                                {% for item in plan_status %}
                                    <option value="{{ item.statusId }}">{{ item.description }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                    </div>
                    <div class="form-group m-form__group row align-items-center mb-2">
                        <div class="col-md-2">
                            <select class="form-control m-select2" id="filtro-county">
                                <option value="">County</option>
                                {% for item in countys %}
                                    <option value="{{ item.countyId }}">{{ item.description }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2" id="select-filtro-district">
                            <select class="form-control m-select2" id="filtro-district">
                                <option value="">District</option>
                                {% for item in districts %}
                                    <option value="{{ item.districtId }}">{{ item.description }}
                                    </option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-md-2">
                            <div class='input-group date'>
                                <input type='text' class="form-control m-input date-picker"
                                       placeholder="From" autocomplete="off" id="fechaInicial"/>
                                <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class='input-group date'>
                                <input type='text' class="form-control m-input date-picker"
                                       placeholder="To" autocomplete="off" id="fechaFin"/>
                                <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="m-input-icon m-input-icon--left">
                                <input type="text" class="form-control m-input m_form_search"
                                       placeholder="Search...">
                                <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <a href="javascript:;" id="btn-filtrar"
                               class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                        <span>
                                            <i class="la la-search"></i>
                                            <span>Search</span>
                                        </span>
                            </a>
                        </div>
                    </div>
                </div>
                <!--end: Search Form -->
                <!--begin: Datatable -->
                <div class="m_datatable" id="estimate-table-editable"></div>
                <!--end: Datatable -->
            </div>
        </div>

        <div id="form-estimate" class="m-portlet m--hide">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text" id="form-estimate-title">
                            Do you want to create a new project estimate? Follow the next steps:
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;"
                               class="m-portlet__nav-link m-portlet__nav-link--icon cerrar-form-estimate"><i
                                        class="la la-close"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <div class="m-portlet__body">

                <ul class="nav nav-tabs m--hide nav-item-hide" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active wizard-tab" data-item="1"
                           data-toggle="tab" href="#tab-content-general" id="tab-general">
                            Bid Details
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link wizard-tab" data-item="2"
                           data-toggle="tab" href="#tab-content-bid-details" id="tab-bid-details">
                            Bidders
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link wizard-tab" data-item="3"
                           data-toggle="tab" href="#tab-content-quotes" id="tab-quotes">
                            Quotes
                        </a>
                    </li>
                    {#
                    <li class="nav-item">
                        <a class="nav-link wizard-tab" data-item="4"
                           data-toggle="tab" href="#tab-content-project-information" id="tab-project-information">
                            Project Information
                        </a>
                    </li>
                    #}
                    <li class="nav-item">
                        <a class="nav-link wizard-tab" data-item="4"
                           data-toggle="tab" href="#tab-content-bid-information" id="tab-bid-information">
                            Notes
                        </a>
                    </li>
                </ul>

                <div class="tab-content">
                    <div class="tab-pane active" id="tab-content-general" role="tabpanel">
                        <form class="m-form" id="estimate-form" action="#" enctype="multipart/form-data"
                              method="post">

                            <input type="hidden" id="estimate_id" name="estimate_id"/>

                            <div class="m-form__section m-form__section--first">

                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">1</span>
                                        Project Name
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <input type="text" class="form-control event-change" id="name"
                                           name="name">
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>
                                                <span class="ic-step-number">2</span>
                                                Bid Deadline
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="bidDeadline" name="biddeadline"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label>
                                                Assign an estimator
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="estimator"
                                                    name="estimator" multiple>
                                                {% for item in estimators %}
                                                    <option value="{{ item.usuarioId }}">{{ item.nombre }} {{ item.apellidos }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-2" id="select-project-stage">
                                            <label>
                                                Project Stage
                                                <span class="ic-small italic">(required)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change select-stage"
                                                    id="project-stage" name="stage">
                                                <option value="">Select</option>
                                                {% for item in stages %}
                                                    <option value="{{ item.stageId }}"
                                                            data-color="{{ item.color }}">{{ item.description }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-2" id="select-county">
                                            <label>
                                                <span class="ic-step-number">3</span>
                                                County
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="county"
                                                    name="county">
                                                <option value="">Select</option>
                                                {% for item in countys %}
                                                    <option value="{{ item.countyId }}"
                                                    data-district="{% if item.district %}{{ item.district.districtId }}{% endif %}">{{ item.description }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-6">
                                            <label>
                                                Project Type
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="project-type"
                                                    name="projecttype" multiple>
                                                {% for item in project_types %}
                                                    <option value="{{ item.typeId }}">{{ item.description }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Proposal Type
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="proposal-type"
                                                    name="proposaltype">
                                                <option value="">Select</option>
                                                {% for item in proposal_types %}
                                                    <option value="{{ item.typeId }}">{{ item.description }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Plan Status
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="plan-status"
                                                    name="planstatus">
                                                <option value="">Select</option>
                                                {% for item in plan_status %}
                                                    <option value="{{ item.statusId }}">{{ item.description }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-2" id="select-district">
                                            <label>
                                                <span class="ic-step-number">4</span>
                                                District
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="district"
                                                    name="district">
                                                <option value="">Select</option>
                                                {% for item in districts %}
                                                    <option value="{{ item.districtId }}">{{ item.description }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label>
                                                Project Id
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <input type="text" class="form-control event-change" id="project_id"
                                                   name="projectid">
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Priority
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="priority"
                                                    name="priority">
                                                <option value="">Select</option>
                                                <option value="Low">Low</option>
                                                <option value="Medium">Medium</option>
                                                <option value="High">High</option>
                                            </select>
                                        </div>
                                        <div class="col-md-3">
                                            <label>
                                                Bid No.
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <input type="text" class="form-control event-change" id="bidNo"
                                                   name="bidno">
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Work Hours
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <input type="text" class="form-control event-change" id="workHour"
                                                   name="workhour">
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>
                                                <span class="ic-step-number">5</span>
                                                Job walk
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="jobWalk" name="jobwalk"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Rfi Due Date
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="rfiDueDate" name="rfiduedate"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Project Start
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="projectStart" name="projectstart"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Project End
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="projectEnd" name="projectend"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Submitted Date
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="submittedDate" name="submitteddate"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Awarded Date
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="awardedDate" name="awardeddate"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <div class="row">
                                        <div class="col-md-2">
                                            <label>
                                                <span class="ic-step-number">6</span>
                                                Lost Date
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class='input-group date'>
                                                <input type='text'
                                                       class="form-control m-input date-time-picker event-change"
                                                       placeholder="Select a date" autocomplete="off"
                                                       id="lostDate" name="lostdate"/>
                                                <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <label>
                                                Location
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <div class="input-group m-input-group">
                                                <div class="input-group-prepend"><span class="input-group-text"><i
                                                                class="flaticon-location"></i></span></div>
                                                <input type="text" class="form-control event-change" id="location"
                                                       name="location">

                                            </div>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Sector
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="sector"
                                                    name="plandownloading">
                                                <option value="">Select</option>
                                                <option value="Public">Public</option>
                                                <option value="Private">Private</option>
                                            </select>
                                        </div>
                                        <div class="col-md-2">
                                            <label>
                                                Plans Downloading
                                                <span class="ic-small italic">(optional)</span>
                                            </label>
                                            <select class="form-control m-select2 event-change" id="plan-downloading"
                                                    name="plandownloading">
                                                <option value="">Select</option>
                                                {% for item in plan_downloadings %}
                                                    <option value="{{ item.planDownloadingId }}">{{ item.description }}</option>
                                                {% endfor %}
                                            </select>
                                        </div>

                                    </div>
                                </div>

                            </div>

                        </form>
                    </div>
                    <div class="tab-pane" id="tab-content-bid-details" role="tabpanel">
                        <form class="m-form" id="estimate-bid-details-form" action="#" enctype="multipart/form-data"
                              method="post">

                            <div class="m-form__section m-form__section--first">

                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">1</span>
                                        Bid Deadline
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <div>
                                        <a href="javascript:;"
                                           class="btn btn-success btn-sm mb-3 btn-agregar-bid-deadline">
                                            <i class="la la-plus"></i> Add deadline
                                        </a>
                                    </div>
                                    <div id="lista-bid-deadline" class="m-widget4 m-widget4--chart-bottom">

                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">
                                    <label>
                                        <span class="ic-step-number">2</span>
                                        Companies
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <div>
                                        <a href="javascript:;" id="btn-agregar-company-estimate"
                                           class="btn btn-success btn-sm mb-3">
                                            <i class="la la-plus"></i> Add company
                                        </a>
                                    </div>
                                    <div id="lista-company" class="m-widget4 m-widget4--chart-bottom">

                                    </div>
                                </div>

                                <div class="form-group m-form__group ic-form-group">

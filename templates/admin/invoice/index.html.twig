                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                           <a href="#" class="menu-link px-3" data-kt-export="pdf"> Export to PDF </a>
                        </div>
                        <!--end::Menu item-->
                     </div>
                     <!--end::Menu-->
                     <!--end::Export dropdown-->

                     <!--begin::Hide default export buttons-->
                     <div id="invoice-table-editable-buttons" class="d-none"></div>
                     <!--end::Hide default export buttons-->
                  </div>
               </div>
            </div>
         </div>
         <div class="card-body">
            <!--begin::Datatable-->
            <table id="invoice-table-editable" class="table table-striped align-middle table-row-dashed fs-6 gy-3 gs-5">
               <thead>
                  <tr class="fw-bold fs-6 text-gray-800 px-7">
                     {% if permiso.eliminar %}
                     <th class="w-10px pe-2">
                        <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                           <input class="form-check-input check-select-all" type="checkbox" data-kt-check="true" data-kt-check-target="#invoice-table-editable .form-check-input" value="1" />

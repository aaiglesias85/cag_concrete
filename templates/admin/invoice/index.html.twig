<link href="{{ asset('bundles/metronic8/plugins/datatable/fixed-column/fixedColumns.bootstrap5.min.css') }}" rel="stylesheet" type="text/css" />

<style>
   .dtfc-fixed-start {
      background: #fff !important;
   }

   .dtfc-fixed-end {
      background: #fff !important;
   }

   .row-secondary > td {
      background: #e6f2ff !important;
   }

   #invoice-table-editable .form-control {
      padding: 0.6rem 0.5rem !important;
   }

   #items-table-editable thead th {
      white-space: normal; /* Permite salto de línea */
      font-size: 1rem;
      line-height: 1.2;
      text-align: center;
      vertical-align: middle;
      padding: 0.5rem 0.4rem;
   }

   #items-table-editable tfoot th,
   #items-table-editable tfoot td {
      color: red !important;
      font-weight: bold;
   }

/* Ajuste de Diseño Slim para Invoices */
#form-invoice .card {
    min-height: 55px !important; /* Altura más baja */
    justify-content: center;
    border-radius: 8px !important;
    box-shadow: 0 1px 4px rgba(0, 0, 0, 0.02);
}

/* Forzar que los inputs no tomen espacio extra */
#form-invoice .card input {
    height: auto !important;
    padding: 0 !important;
    margin: 0 !important;
    pointer-events: none;
    line-height: 1.1;
}

/* Ajuste de etiquetas micro */
.fs-9 {
    font-size: 0.65rem !important;
}

/* Fondo claro exacto (opacity 10) */
.bg-opacity-10 {
    --bs-bg-opacity: 0.1 !important; /* Esto hace el fondo claro y elegante */
}

#form-invoice .card {
    min-height: 55px !important;
    border-radius: 8px !important;
}

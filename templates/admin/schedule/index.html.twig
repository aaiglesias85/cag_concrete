    <!-- calendario -->
    <script src="{{ asset('bundles/ican/plugins/moment/moment.min.js') }}"></script>
    <script src="{{ asset('bundles/ican/plugins/moment-timezone/moment-timezone.min.js') }}"></script>
    <script src="{{ asset('bundles/ican/plugins/fullcalendar/fullcalendar.bundle.js') }}"></script>

    <script src="{{ asset('bundles/ican/js/pages/schedules.js') }}?{{ 'now' | date('U') }}"></script>
    <script>

        var permiso = {
            agregar: {% if permiso.agregar %}{{ permiso.agregar }}{% else %}0{% endif %}, // 1 o 0
            editar: {% if permiso.editar %}{{ permiso.editar }}{% else %}0{% endif %},
            eliminar: {% if permiso.eliminar %}{{ permiso.eliminar }}{% else %}0{% endif %}
        };

        jQuery(document).ready(function () {
            Schedules.init();
        });
    </script>
{% endblock %}

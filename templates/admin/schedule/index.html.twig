{% extends 'admin/layout.html.twig' %}

{% block subtitle %} - Schedules{% endblock %}

{% block stylesheetspecific %}
    <link href="{{ asset('bundles/ican/plugins/fullcalendar/fullcalendar.bundle.css') }}" rel="stylesheet">
    <style>

        .fc-slats tr,
        .fc-slats td {
            border: none !important;
            background: none !important;
        }


        .fc-slats .fc-time {
            display: none !important;
        }
    </style>
{% endblock %}

{% block content %}
    <!-- BEGIN: Subheader -->
    <div class="m-subheader ">
        <div class="d-flex align-items-center">
            <div class="mr-auto">
                <h3 class="m-subheader__title m-subheader__title--separator">Schedules</h3>
                <ul class="m-subheader__breadcrumbs m-nav m-nav--inline">
                    <li class="m-nav__item m-nav__item--home">
                        <a href="{{ url('home') }}" class="m-nav__link m-nav__link--icon">
                            <i class="m-nav__link-icon la la-home"></i>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Schedules</span>
                        </a>
                    </li>
                    <li class="m-nav__separator">-</li>
                    <li class="m-nav__item">
                        <a href="" class="m-nav__link">
                            <span class="m-nav__link-text">Manage schedules</span>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <!-- END: Subheader -->

    <div class="m-content">
        <div id="lista-schedule" class="m-portlet m-portlet--mobile" m-portlet="true">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text">
                            Schedules
                        </h3>
                    </div>

                    <a href="javascript:;" id="btn-reset-filtrar" class="btn mr-1">
                            <span>
                                <i class="la la-refresh"></i>
                                <span>Reset filters</span>
                            </span>
                    </a>

                    <a href="javascript:;" id="btn-calendario" class="btn">
                        <span><i class="la la-calendar mr-1"></i><span>Hide Calendar</span></span>
                    </a>

                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        {% if permiso.agregar %}
                            <li class="m-portlet__nav-item">
                                <a id="btn-nuevo-schedule"
                                   class="btn btn-success btn-icon"
                                   href="javascript:;">
                                    <span>
                                        <i class="la la-plus"></i>
                                        <span class="m--hidden-mobile">New</span>
                                    </span>
                                </a>
                            </li>
                        {% endif %}
                        {% if permiso.eliminar %}
                            <li class="m-portlet__nav-item">
                                <a id="btn-eliminar-schedule"
                                   class="btn btn-danger btn-icon"
                                   href="javascript:;">
                                    <span>
                                        <i class="la la-trash-o"></i>
                                        <span class="m--hidden-mobile">Delete</span>
                                    </span>
                                </a>
                            </li>
                        {% endif %}
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;" m-portlet-tool="fullscreen"
                               class="m-portlet__nav-link m-portlet__nav-link--icon">
                                <i class="la la-expand"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="m-portlet__body">
                <!--begin: Search Form -->
                <div class="form-group m-form__group row align-items-center mb-2">
                    <div class="col-md-2">
                        <select class="form-control m-select2" id="filtro-project">
                            <option value="">Projects</option>
                            {% for item in projects %}
                                <option value="{{ item.projectId }}">{{ item.projectNumber }}
                                    - {{ item.description }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <select class="form-control m-select2" id="filtro-concrete-vendor">
                            <option value="">Concrete Vendor</option>
                            {% for item in concrete_vendors %}
                                <option value="{{ item.vendorId }}">{{ item.name }}</option>
                            {% endfor %}
                        </select>
                    </div>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text' class="form-control m-input date-picker"
                                   placeholder="From" autocomplete="off" id="fechaInicial"/>
                            <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class='input-group date'>
                            <input type='text' class="form-control m-input date-picker"
                                   placeholder="To" autocomplete="off" id="fechaFin"/>
                            <div class="input-group-append">
                                            <span class="input-group-text">
                                                <i class="la la-calendar glyphicon-th"></i>
                                            </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="m-input-icon m-input-icon--left">
                            <input type="text" class="form-control m-input m_form_search"
                                   placeholder="Search...">
                            <span class="m-input-icon__icon m-input-icon__icon--left">
									<span><i class="la la-search"></i></span>
								</span>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <a href="javascript:;" id="btn-filtrar"
                           class="btn btn-info m-btn m-btn--custom m-btn--icon m-btn--air">
                                        <span>
                                            <i class="la la-search"></i>
                                            <span>Search</span>
                                        </span>
                        </a>
                    </div>
                </div>
                <!--end: Search Form -->


                <!--begin: Datatable -->
                <div id="div-lista-schedule" class="m--hide">
                    <div class="m_datatable" id="schedule-table-editable"></div>
                </div>
                <!--end: Datatable -->

                <div class="row mt-5" id="div-calendario">
                    <div class="col-md-12">
                        <div id="calendario"></div>
                    </div>
                </div>
            </div>
        </div>

        <div id="form-schedule" class="m-portlet m--hide">
            <div class="m-portlet__head">
                <div class="m-portlet__head-caption">
                    <div class="m-portlet__head-title">
                        <h3 class="m-portlet__head-text" id="form-schedule-title">
                            Do you want to create a new schedule? Follow the next steps:
                        </h3>
                    </div>
                </div>
                <div class="m-portlet__head-tools">
                    <ul class="m-portlet__nav">
                        <li class="m-portlet__nav-item">
                            <a href="javascript:;"
                               class="m-portlet__nav-link m-portlet__nav-link--icon cerrar-form-schedule"><i
                                        class="la la-close"></i></a>
                        </li>
                    </ul>
                </div>
            </div>

            <form class="m-form" id="schedule-form" action="#"
                  enctype="multipart/form-data" method="post">

                <input type="hidden" id="schedule_id" name="schedule_id"/>

                <div class="m-portlet__body">

                    <div class="m-form__section m-form__section--first">

                        <div class="form-group m-form__group ic-form-group">
                            <div class="row">
                                <div class="col-md-4" id="select-project">
                                    <label>
                                        <span class="ic-step-number">1</span>
                                        Project
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <select class="form-control m-select2 event-change" id="project"
                                            name="project">
                                        <option value="">Select</option>
                                        {% for item in projects %}
                                            <option value="{{ item.projectId }}">{{ item.projectNumber }}
                                                - {{ item.description }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-4" id="select-contact-project">
                                    <label>
                                        Contact Project
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <select class="form-control m-select2 event-change" id="contact-project"
                                            name="contactproject">
                                        <option value="">Select</option>
                                    </select>
                                </div>
                                <div class="col-md-2 m--hide" id="div-day">
                                    <label>
                                        Day
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker event-change"
                                               placeholder="Select a date" autocomplete="off"
                                               id="day" name="day"/>
                                        <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 date-new">
                                    <label>
                                        Start Date
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker event-change"
                                               placeholder="Date Start" autocomplete="off"
                                               id="date-start" name="datestart"/>
                                        <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-2 date-new">
                                    <label>
                                        Stop Date
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker event-change"
                                               placeholder="Date Stop" autocomplete="off"
                                               id="date-stop" name="datestop"/>
                                        <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-form__group ic-form-group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        <span class="ic-step-number">2</span>
                                        Work Description
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <input type="text" class="form-control event-change" id="description"
                                           name="description">
                                </div>
                                <div class="col-md-6">
                                    <label>
                                        Location
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <div class="input-group m-input-group">
                                        <div class="input-group-prepend"><span class="input-group-text"><i
                                                        class="flaticon-location"></i></span></div>
                                        <input type="text" class="form-control event-change" id="location"
                                               name="location">

                                    </div>
                                </div>

                            </div>
                        </div>

                        <div class="form-group m-form__group ic-form-group">
                            <div class="row">
                                <div class="col-md-4" id="select-concrete-vendor">
                                    <label>
                                        <span class="ic-step-number">3</span>
                                        Concrete Vendor
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <select class="form-control m-select2 event-change" id="concrete-vendor"
                                            name="concretevendor">
                                        <option value="">Select</option>
                                        {% for item in concrete_vendors %}
                                            <option value="{{ item.vendorId }}">{{ item.name }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-8" id="select-contact-concrete-vendor">
                                    <label>
                                        Contacts Concrete Vendor
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <select class="form-control m-select2 event-change"
                                            id="contact-concrete-vendor" name="contactconcretevendor" multiple>

                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="form-group m-form__group ic-form-group">
                            <div class="row">
                                <div class="col-md-3" id="select-hour">
                                    <label>
                                        Hour
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <select class="form-control m-select2 event-change" id="hour" name="hour"
                                            multiple="">
                                        {% for h in 0..23 %}
                                            {% for m in [0, 15, 30, 45] %}
                                                {% set hour = "%02d:%02d"|format(h, m) %}
                                                <option value="{{ hour }}">{{ hour }}</option>
                                            {% endfor %}
                                        {% endfor %}
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <label>
                                        Quantity
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <input type="text" class="form-control" id="quantity" name="quantity">
                                </div>
                                <div class="col-md-2">
                                    <label></label>
                                    <div>
                                        <label class="m-checkbox">
                                            <input type="checkbox" id="highpriority" name="highpriority">
                                            High Priority
                                            <span></span>
                                        </label>
                                    </div>
                                </div>
                                <div class="col-md-5">
                                    <label>
                                        Notes
                                        <span class="ic-small italic">(optional)</span>
                                    </label>
                                    <textarea class="form-control form-control-text" rows="3" id="notes"
                                              name="notes"> </textarea>
                                </div>

                            </div>
                        </div>

                    </div>

                    <div class="m-form__actions">
                        {% if permiso.agregar or permiso.editar %}
                            <button id="btn-salvar-schedule" class="btn btn-success" type="button">
                                Save
                            </button>

                            <button id="btn-clonar" class="btn btn-warning m--hide" type="button">
                                Clone Schedule
                            </button>
                        {% endif %}
                        <button class="btn btn-danger cerrar-form-schedule" type="button">
                            Cancel
                        </button>
                    </div>
                </div>
            </form>

        </div>

    </div>

    <!-- modal clonar -->
    <div class="modal fade" id="modal-clonar-schedule" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">
                        Clone Schedule
                    </h5>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>

                </div>
                <div class="modal-body">
                    <form class="m-form" id="clonar-schedule-form" action="#"
                          enctype="multipart/form-data" method="post">

                        <div class="form-group m-form__group">
                            <div class="row">
                                <div class="col-md-6">
                                    <label>
                                        Start Date
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker event-change"
                                               placeholder="Date Start" autocomplete="off"
                                               id="date-start-clonar" name="datestart"/>
                                        <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label>
                                        Stop Date
                                        <span class="ic-small italic">(required)</span>
                                    </label>
                                    <div class='input-group date'>
                                        <input type='text' class="form-control m-input date-picker event-change"
                                               placeholder="Date Stop" autocomplete="off"
                                               id="date-stop-clonar" name="datestop"/>
                                        <div class="input-group-append">
                                                    <span class="input-group-text">
                                                        <i class="la la-calendar glyphicon-th"></i>
                                                    </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-success" id="btn-clonar-schedule">Save</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>


{% endblock %}

{% block javascriptsspecific %}


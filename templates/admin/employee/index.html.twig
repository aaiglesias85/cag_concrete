{% endblock %} {% block content %}

<!--begin::Toolbar-->
<div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
   <!--begin::Toolbar container-->
   <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex flex-stack">
      <!--begin::Page title-->
      <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
         <!--begin::Title-->
         <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">Employees</h1>
         <!--end::Title-->
         <!--begin::Breadcrumb-->
         <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">
               <a href="{{ url('home') }}" class="text-muted text-hover-primary">Home</a>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item">
               <span class="bullet bg-gray-500 w-5px h-2px"></span>
            </li>
            <!--end::Item-->
            <!--begin::Item-->
            <li class="breadcrumb-item text-muted">Manage Employees</li>
            <!--end::Item-->
         </ul>
         <!--end::Breadcrumb-->
      </div>
      <!--end::Page title-->
      <!--begin::Actions-->
      <div class="d-flex align-items-center gap-2 gap-lg-3"></div>
      <!--end::Actions-->
   </div>
   <!--end::Toolbar container-->
</div>
<!--end::Toolbar-->
<!--begin::Content-->
<div id="kt_app_content" class="app-content flex-column-fluid">
   <!--begin::Content container-->
   <div id="kt_app_content_container" class="app-container container-fluid">
      <!-- lista -->
      <div id="lista-employee" class="card card-sticky">
         <div
            class="card-header border-0 pt-6"
            data-kt-sticky="true"
            data-kt-sticky-name="lista-employee"
            data-kt-sticky-offset="{default: '50px', xl: '70px'}"
            data-kt-sticky-width="{default: '95%', sm: '100%', md: '100%', lg: '70%', xl: '82%'}"
            data-kt-sticky-left="auto"
            data-kt-sticky-top="{default: '0px', sm: '0px', md: '0px', lg: '45px', xl: '45px'}"
            data-kt-sticky-animation="false"
            data-kt-sticky-zindex="95"
         >
            <div class="card-title">
               <div class="d-flex align-items-center position-relative my-1">
                  <i class="ki-duotone ki-magnifier text-primary fs-3 position-absolute ms-5">
                     <span class="path1"></span>
                     <span class="path2"></span>
                  </i>
                  <input type="text" data-table-filter="search" class="form-control form-control-solid w-300px ps-13" placeholder="Search..." />
               </div>
            </div>
            <div class="card-toolbar">
               <div class="d-flex justify-content-end">
                  <!-- new -->
                  {% if permiso.agregar %}
                  <button type="button" id="btn-nuevo-employee" class="btn btn-success me-2">
                     <i class="ki-duotone ki-plus-circle fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                     <span class="kt-hidden-mobile font-weight-bold">New</span>
                  </button>
                  {% endif %}

                  <!-- delete -->
                  {% if permiso.eliminar %}
                  <button type="button" id="btn-eliminar-employee" class="btn btn-danger me-2 hide">
                     <i class="ki-duotone ki-trash fs-1"><span class="path1"></span><span class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                     <span class="kt-hidden-mobile font-weight-bold">Delete</span>
                  </button>
                  {% endif %}

                  <!-- export -->
                  <div>
                     <!--begin::Export buttons-->
                     <div id="employee-table-editable-export" class="d-none"></div>
                     <!--end::Export buttons-->

                     <!--begin::Export dropdown-->
                     <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                        <i class="ki-duotone ki-exit-down fs-2"><span class="path1"></span><span class="path2"></span></i>
                        <span class="kt-hidden-mobile font-weight-bold">Export</span>
                     </button>

                     <!--begin::Menu-->
                     <div
                        id="employee_export_menu"
                        class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-200px py-4"
                        data-kt-menu="true"
                     >
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                           <a href="#" class="menu-link px-3" data-kt-export="copy"> Copy to clipboard </a>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                           <a href="#" class="menu-link px-3" data-kt-export="excel"> Export to Excel </a>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                           <a href="#" class="menu-link px-3" data-kt-export="csv"> Export CSV </a>
                        </div>
                        <!--end::Menu item-->
                        <!--begin::Menu item-->
                        <div class="menu-item px-3">
                           <a href="#" class="menu-link px-3" data-kt-export="pdf"> Export to PDF </a>
                        </div>
                        <!--end::Menu item-->
                     </div>
                     <!--end::Menu-->
                     <!--end::Export dropdown-->

                     <!--begin::Hide default export buttons-->
                     <div id="employee-table-editable-buttons" class="d-none"></div>
                     <!--end::Hide default export buttons-->
                  </div>
               </div>
            </div>
         </div>
         <div class="card-body">
            <!--begin::Datatable-->
            <table id="employee-table-editable" class="table table-striped align-middle table-row-dashed fs-6 gy-3 gs-5">
               <thead>
                  <tr class="fw-bold fs-6 text-gray-800 px-7">
                     {% if permiso.eliminar %}
                     <th class="w-10px pe-2">
                        <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                           <input class="form-check-input check-select-all" type="checkbox" data-kt-check="true" data-kt-check-target="#employee-table-editable .form-check-input" value="1" />
                        </div>
                     </th>
                     {% endif %}
                     <th>Social Security #</th>
                     <th>Name</th>
                     <th>Address</th>
                     <th>Phone</th>
                     <th>Gender</th>
                     <th>Ethnicity/Race</th>
                     <th>Hourly Rate</th>
                     <th>Position</th>
                     <th>Status</th>
                     <th class="text-end min-w-100px">Actions</th>
                  </tr>
               </thead>
               <tbody class="text-gray-600 fw-semibold"></tbody>
            </table>
            <!--end::Datatable-->
         </div>
      </div>

      <!-- form -->
      <div id="form-employee" class="card card-sticky hide">
         <div
            class="card-header"
            data-kt-sticky="true"
            data-kt-sticky-name="form-employee"
            data-kt-sticky-offset="{default: '50px', xl: '70px'}"
            data-kt-sticky-width="{default: '95%', sm: '100%', md: '100%', lg: '70%', xl: '82%'}"
            data-kt-sticky-left="auto"
            data-kt-sticky-top="{default: '0px', sm: '0px', md: '0px', lg: '60px', xl: '60px'}"
            data-kt-sticky-animation="false"
            data-kt-sticky-zindex="95"
         >
            <div class="card-title">
               <h3 class="card-label">New employee:</h3>
            </div>
            <div class="card-toolbar">
               <a href="javascript:;" class="btn btn-secondary cerrar-form-project me-2">
                  <i class="la la-close"></i>
                  <span class="kt-hidden-mobile font-weight-bold">Cancel</span>
               </a>

               <button id="btn-wizard-anterior" class="btn btn-warning me-2 hide" type="button">
                  <i class="la la-arrow-left me-2"></i>
                  <span class="kt-hidden-mobile font-weight-bold">Back</span>
               </button>

               <button id="btn-wizard-siguiente" class="btn btn-primary me-2" type="button">
                  <span class="kt-hidden-mobile font-weight-bold">Next</span>
                  <i class="la la-arrow-right ms-2"></i>
               </button>

               {% if permiso.agregar or permiso.editar %}
               <button type="button" id="btn-wizard-finalizar" class="btn btn-success">
                  <i class="la la-check"></i>
                  <span class="kt-hidden-mobile font-weight-bold">Save</span>
               </button>
               {% endif %}
            </div>
         </div>

         <form class="form" id="employee-form" action="javascript:;" enctype="multipart/form-data" method="post">
            <input type="hidden" id="employee_id" name="employee_id" />

            <div class="card-body">
               <ul class="wizzard-tabs nav nav-tabs nav-tabs-space-lg nav-tabs-line nav-bold mb-6">
                  <li class="nav-item">
                     <a class="nav-link active wizard-tab" data-item="1" data-bs-toggle="tab" href="#tab-content-general" id="tab-general">

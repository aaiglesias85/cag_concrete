                        <div class="tab-content">

                            <div class="tab-pane fade show active" id="tab-content-general" role="tabpanel">

                                <div class="form-group ic-form-group">
                                    <div class="row">
                                        <!-- Subcontractor Name -->
                                        <div class="col-md-6">
                                            <label class="form-label required">
                                                <span class="ic-step-number">1</span>
                                                Subcontractor Name
                                            </label>
                                            <input type="text" class="form-control form-control-validate form-control-solid event-change"
                                                   id="name" name="name"/>
                                        </div>

                                        <!-- Subcontractor Phone -->
                                        <div class="col-md-3">
                                            <label class="form-label">Subcontractor Phone</label>
                                            <div class="input-group input-group-solid">
                                                <span class="input-group-text"><i class="la la-phone"></i></span>
                                                <input type="text"
                                                       class="form-control form-control-validate input-phone event-change"
                                                       id="phone" name="phone" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mt-3">
                                        <!-- Subcontractor Address -->
                                        <div class="col-md-12">
                                            <label class="form-label">Subcontractor Address</label>
                                            <textarea class="form-control form-control-validate form-control-solid event-change"
                                                      id="address" name="address" rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group ic-form-group">
                                    <div class="row">
                                        <!-- Company Name -->
                                        <div class="col-md-6">
                                            <label class="form-label">
                                                <span class="ic-step-number">2</span>
                                                Company Name
                                            </label>
                                            <input type="text" class="form-control form-control-validate form-control-solid event-change"
                                                   id="companyName" name="companyname"/>
                                        </div>

                                        <!-- Company Phone -->
                                        <div class="col-md-3">
                                            <label class="form-label">Company Phone</label>
                                            <div class="input-group input-group-solid">
                                                <span class="input-group-text"><i class="la la-phone"></i></span>
                                                <input type="text"
                                                       class="form-control form-control-validate input-phone event-change"
                                                       id="companyPhone" name="companyphone" autocomplete="off">
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row mt-3">
                                        <!-- Company Address -->
                                        <div class="col-md-12">
                                            <label class="form-label">Company Address</label>
                                            <textarea class="form-control form-control-validate form-control-solid event-change"
                                                      id="companyAddress" name="companyaddress" rows="2"></textarea>
                                        </div>
                                    </div>
                                </div>


                            </div>
                            <div class="tab-pane fade" id="tab-content-employees" role="tabpanel">
                                <div class="row" id="lista-employees">
                                    <div class="col-md-12">

                                        <!--begin::Wrapper-->
                                        <div class="d-flex flex-column flex-lg-row align-items-lg-center justify-content-between gap-4 mb-5">

                                            <!-- Acciones -->
                                            <div class="d-flex flex-wrap gap-3">
                                                {% if permiso.agregar or permiso.editar %}
                                                    <button id="btn-agregar-employee" class="btn btn-success w-125px">
                                                        <i class="ki-duotone ki-plus-circle fs-1 me-2"><span class="path1"></span><span
                                                                    class="path2"></span><span class="path3"></span><span class="path4"></span></i>
                                                        New
                                                    </button>
                                                {% endif %}
                                            </div>

                                            <!-- Filtros -->
                                            <div class="d-flex flex-wrap align-items-center gap-3">
                                                <!--search-->
                                                <div class="position-relative w-250px">
                                                    <i class="ki-duotone ki-magnifier text-primary fs-1 position-absolute top-50 translate-middle-y ms-3"><span
                                                                class="path1"></span><span class="path2"></span></i>
